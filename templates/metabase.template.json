{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "customerName": {
      "type": "string",
      "metadata": {
        "description": "The name of the customer this instance is being deployed for."
      }
    },
    "administratorUsername": {
      "type": "string"
    },
    "administratorPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "appServicePlanName": "[concat(parameters('customerName'), '-mesmer-mb-service-plan')]",
    "metabaseName": "[concat(parameters('customerName'), '-mesmer-metabase')]",
    "metabaseNameDatabaseName": "[concat(parameters('customerName'), '-mesmer-mb-db')]",
    "serverName": "[concat(parameters('customerName'), '-mesmer-postgres')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "Tier": "Standard",
        "Name": "S1"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "apiVersion": "2016-08-01",
      "type": "Microsoft.Web/sites",
      "name": "[variables('metabaseName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "siteConfig": {
          "name": "[variables('metabaseName')]",
          "appSettings": [
            {
              "name": "MB_DB_CONNECTION_URI",
              "value": "[concat('postgresql://', variables('serverName'), '.postgres.database.azure.com',':5432/', variables('metabaseNameDatabaseName'),'?user=', parameters('administratorUsername'), '@', variables('serverName'), '.postgres.database.azure.com','&password=', parameters('administratorPassword'), '&sslmode=require')]"
            }
          ],
          "linuxFxVersion": "DOCKER|metabase/metabase"
        },
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ]
    }
  ]
}